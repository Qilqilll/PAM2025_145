<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.tugasakhir_145.ui.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_adminDashboardFragment"
            app:destination="@id/adminDashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_cashierDashboardFragment"
            app:destination="@id/cashierDashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.tugasakhir_145.ui.auth.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/adminDashboardFragment"
        android:name="com.example.tugasakhir_145.ui.admin.AdminDashboardFragment"
        android:label="Admin Dashboard"
        tools:layout="@layout/fragment_admin_dashboard">
        <action
            android:id="@+id/action_adminDashboardFragment_to_productListFragment"
            app:destination="@id/productListFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/adminDashboardFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/productListFragment"
        android:name="com.example.tugasakhir_145.ui.admin.ProductListFragment"
        android:label="Kelola Produk"
        tools:layout="@layout/fragment_product_list">
        <action
            android:id="@+id/action_productListFragment_to_addEditProductFragment"
            app:destination="@id/addEditProductFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEditProductFragment"
        android:name="com.example.tugasakhir_145.ui.admin.AddEditProductFragment"
        android:label="Tambah/Edit Produk"
        tools:layout="@layout/fragment_add_edit_product" />

    <fragment
        android:id="@+id/cashierDashboardFragment"
        android:name="com.example.tugasakhir_145.ui.cashier.CashierDashboardFragment"
        android:label="Kasir"
        tools:layout="@layout/fragment_cashier_dashboard">
        <action
            android:id="@+id/action_cashierDashboardFragment_to_cartFragment"
            app:destination="@id/cartFragment" />
    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.tugasakhir_145.ui.cashier.CartFragment"
        android:label="Keranjang"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/transactionReportFragment"
        android:name="com.example.tugasakhir_145.ui.report.TransactionReportFragment"
        android:label="Laporan Detail"
        tools:layout="@layout/fragment_transaction_report" />

    <action
        android:id="@+id/action_global_transactionReportFragment"
        app:destination="@id/transactionReportFragment" />
</navigation>

